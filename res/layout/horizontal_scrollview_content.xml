<HorizontalScrollView
    android:scrollbarThumbHorizontal="@android:color/transparent"
    android:scrollbars="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="300.0dip"
            android:id="@+id/hori_afterlab"
            android:layout_height="85.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="12.0dip">
            <androidx.cardview.widget.CardView
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="100.0dip"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:gravity="start|center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="10.0dip">
                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="18dp"
                        android:paddingHorizontal="16.0dip"
                        app:cardBackgroundColor="@color/afl_icon_color"
                        app:cardElevation="0.0dip">
                        <LinearLayout
                            android:id="@+id/icon_frame"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip">
                            <androidx.preference.internal.PreferenceImageView
                                android:id="@android:id/icon"
                                android:padding="14.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_settings_afterlab"
                                android:tint="?android:colorAccent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:gravity="end|center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="?android:textColorPrimary"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:text="AfterLabs"
                            android:maxLines="2"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:textSize="10.0sp"
                            android:textColor="?android:textColorSecondary"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0.0dip"
                            android:text="Get some features for a better customization experience in our laboratory"
                            android:maxLines="5"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300.0dip"
            android:id="@+id/hori_game_space"
            android:layout_height="85.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginEnd="12.0dip">
            <androidx.cardview.widget.CardView
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="100.0dip"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:gravity="start|center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="10.0dip">
                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="18dp"
                        android:paddingHorizontal="16.0dip"
                        app:cardBackgroundColor="@color/afl_icon_color"
                        app:cardElevation="0.0dip">
                        <LinearLayout
                            android:id="@+id/icon_frame"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip">
                            <androidx.preference.internal.PreferenceImageView
                                android:id="@android:id/icon"
                                android:padding="14.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_game_space"
                                android:tint="?android:colorAccent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:gravity="end|center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="?android:textColorPrimary"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:text="Game space"
                            android:maxLines="2"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:textSize="10.0sp"
                            android:textColor="?android:textColorSecondary"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0.0dip"
                            android:text="Game Space is a system tool for you devices that optimizes your experience playing all of your favorite games"
                            android:maxLines="5"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300.0dip"
            android:layout_height="85.0dip"
            android:id="@+id/hori_darkmode"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginEnd="12.0dip">
            <androidx.cardview.widget.CardView
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minHeight="100.0dip"
                app:cardCornerRadius="26dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardElevation="0.0dip">
                <LinearLayout
                    android:gravity="start|center"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="10.0dip">
                    <androidx.cardview.widget.CardView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="18dp"
                        android:paddingHorizontal="16.0dip"
                        app:cardBackgroundColor="@color/afl_icon_color"
                        app:cardElevation="0.0dip">
                        <LinearLayout
                            android:id="@+id/icon_frame"
                            android:layout_width="48.0dip"
                            android:layout_height="48.0dip">
                            <androidx.preference.internal.PreferenceImageView
                                android:id="@android:id/icon"
                                android:padding="14.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_darkmode"
                                android:tint="?android:colorAccent"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:gravity="end|center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16.0dip">
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="?android:textColorPrimary"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:text="Dark mode"
                            android:maxLines="2"
                            android:fontFamily="sans-serif-medium"/>
                        <TextView
                            android:textSize="9.0sp"
                            android:textColor="?android:textColorSecondary"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0.0dip"
                            android:text="Dark mode can reduce the light emitted by the screen and still maintain a minimal contrast ratio of colors so that any text is still clearly legible"
                            android:maxLines="5"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>